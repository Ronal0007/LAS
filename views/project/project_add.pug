extends ../layout

block content
	.container
		.row
			div.alert.alert-success Project / Add
	br
	h3#title.text-center Project Add
	hr
	br
	.container#form
		form(action="" method="POST" name="plot_add_form")
			label(for="project_name_input") Project Name
			.form-group
				input#project_name_input.form-control(type="text" placeholder="Project Name" name="project_name")
				small#emailHelp.form-text.text-muted Enter Unique Project Name
			label(for="status") Status
			.form-group
				select#status.form-control(select) Select Status
					option(value="") select status
					option(value="") Active
					option(value="") Inactive
			.form-group
				button.btn.btn-primary(type="submit") ADD PROJECT
